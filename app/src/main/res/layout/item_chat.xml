<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/rl_chat_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="66dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="66dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_chat_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:background="@drawable/chat_bg_right"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="3dp"
            android:paddingBottom="15dp"
            android:paddingLeft="18dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="tv_chat_my"
            android:textColor="@android:color/white"
            android:textScaleX="1"
            android:textSize="16sp" />

        <com.gavin.demo067_xmpp.widget.listvariants.CircularContactView
            android:id="@+id/ccv_head_my"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_chat_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="66dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="66dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_chat_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="55dp"
            android:background="@drawable/chat_bg_left"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="18dp"
            android:paddingTop="15dp"
            android:text="tv_chat_you"
            android:textScaleX="1"
            android:textSize="16sp" />

        <com.gavin.demo067_xmpp.widget.listvariants.CircularContactView
            android:id="@+id/ccv_head_you"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

</RelativeLayout>